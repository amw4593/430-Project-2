<!DOCTYPE html>
<html>

<head>
    <title>Post App</title>
    <link rel="stylesheet" type="text/css" href="/hosted/styles.css" />
</head>

<body>
    <div id="app"></div>
    <script src="https://unpkg.com/react@17/umd/react.production.min.js"></script>
    <script src="https://unpkg.com/react-dom@17/umd/react-dom.production.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/babel-standalone/6.26.0/babel.min.js"></script>

    <script src="/hosted/bundle.js" type="text/babel"></script>


    <div id="postForm">
        <form id="createPostForm" action="/createPost" method="POST">
            <label for="postContent">Share your thoughts:</label>
            <textarea id="postContent" name="content" rows="4" cols="50" placeholder="Write something..."></textarea>
            <button type="submit">Post</button>
        </form>
    </div>

    <div id="changePasswordForm">
        <form id="changePasswordForm" action="/change-password" method="POST">
            <label for="oldPass">Old Password:</label>
            <input id="oldPass" type="password" name="oldPassword" placeholder="Old Password" /><br>
            <label for="newPass">New Password:</label>
            <input id="newPass" type="password" name="newPassword" placeholder="New Password" /><br>
            <label for="confirmPass">Confirm New Password:</label>
            <input id="confirmPass" type="password" name="confirmPassword" placeholder="Confirm New Password" /><br>
            <button type="submit">Change Password</button>
        </form>
    </div>

    <div id="posts">
        <h2>My Posts</h2>
        <ul>
            {{#each posts}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
    </div>


</body>

</html>