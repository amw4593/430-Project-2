<html lang="en">
<head>
  <meta charset="utf-8"/>
  <title>Post</title>
  <link rel="stylesheet" type="text/css" href="/hosted/styles.css"/>
</head>
<body>
  <nav><a href="/login"></a>
    <div class="navlink"><a href="/login">Login</a></div>
    <div class="navlink"><a href="/signup">Sign up</a></div>
  </nav>
  <section id="signup">
    <form id="signupForm" name="signupForm" action="/signup" method="POST" class="mainForm">
      <label for="username">Username: </label>
      <input id="user" type="text" name="username" placeholder="username"/>
      <label for="pass">Password: </label>
      <input id="pass" type="password" name="pass" placeholder="password"/>
      <label for="pass2">Password: </label>
      <input id="pass2" type="password" name="pass2" placeholder="retype password"/>
      <input class="formSubmit" type="submit" value="Sign Up" />
    </form>
  </section>
  <div id="postMessage" class='hidden'>
    <h3><span id="errorMessage"></span></h3>
  </div>
  <script src="/hosted/bundle.js"></script>
</body>
</html> 